<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <!-- IE Edge Meta Tag// edge means the browser should use the best and newest machine -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Viewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <!-- Optional IE8 Support -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag('charity', :media =>'all', 'data-turbolinks-track': 'reload') %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <title>AMRC Data Collection: <%= @page_title %></title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  </head>


  <body>
    <div class="wrapperforstickyfooter">
      <!-- <div class="container-fluid"> to have always min 15px padding even when resizing the window (making it smaller) -->

      <header role="banner" class="header-reports">
        <div class="content-wrap">
          <img class="logo" src="<%= image_url("AMRC_logo.JPG") %>" alt="AMRC Logo">
          <div class='btn-toolbar pull-right'>
            <div class='btn-group'>

              <a href='mailto:j.leblanc@amrc.org.uk' class="btn btn-default templateBtnToolbar contactLogin">
                <span class="glyphicon glyphicon-envelope"></span> Contact Us
              </a>

              <button type="button" class="btn btn-default templateBtnToolbar contactLogin">
                <span class="glyphicon glyphicon-lock"></span><%= link_to("Logout", destroy_user_session_path, method: :delete, class: 'logout-template-btn') %>
              </button>

            </div>
          </div>

          <div class="button-group">
            <%= link_to('Dashboard', {:controller => 'charity_lp', :action => 'landingpage'}, class: "buttonDB") %> <br>
            <%= link_to('Research expenditure', {:controller => 'projects', :action => 'new'}, class: "buttonREP") %> <br>
            <%= link_to('Grants data', {:controller => 'grant_upload', :action => 'grant_data'}, class: "buttonEDIT") %> <br>
          </div>
        </div>
      </header>


      <main>


        <%= yield %>

      </main>

      <div class="push"></div> <!-- include this line for stickyfooter -->
    </div> <!-- close wrapperforstickyfooter -->


    <footer>
      <div class="content-wrap">
        <p>AMRC is a registered charity in England and Wales (296772). Registered as a company limited by guarantee (2107400) in England and Wales. Registered office at Charles Darwin House 2, 107 Gray's Inn Rd, London WC1X 8TZ. Visit the AMRC website for more information:<a href="https://www.amrc.org.uk/" class="footer-link", title="www.amrc.org.uk" target="_blank">www.amrc.org.uk</a></p>
      </div>
    </footer>

    <!-- </div> closing for "container-fluid" -->
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <!-- Link to JavaScript -->
    <!-- <script stc="js/script.js"></script> -->
  </body>
</html>




<script>
 $('.btnNext').click(function() {
   $('.nav-pills > .active').next('li').find('a').trigger('click')
 })

 $('.btnPrevious').click(function() {
   $('.nav-pills > .active').prev('li').find('a').trigger('click')
 })
</script>
